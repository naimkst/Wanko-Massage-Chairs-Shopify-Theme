  "name": "Footer Section",
  "settings": [
    {
      "type": "text",
      "id": "subscribe_title",
      "label": "Subscribe Title",
      "default": "Subscribe To Our Newsletter"
    },
    {
      "type": "text",
      "id": "subscribe_description",
      "label": "Subscribe Description",
      "default": "Subscribe now and enjoy an exclusive 20% discount!"
    },
    {
