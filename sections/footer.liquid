      "label": "Brands Links"
    },
    {
      "type": "text",
      "id": "categories_title",
      "label": "Categories Title",
      "default": "Categories"
    },
    {
      "type": "link_list",
      "id": "categories_links",
      "label": "Categories Links"
    },
    {
      "type": "text",
      "id": "navigate_title",
      "label": "Navigate Title",
      "default": "Navigate"
    },
    {
      "type": "link_list",
      "id": "navigate_links",
      "label": "Navigate Links"
    },
    {
      "type": "text",
      "id": "support_title",
      "label": "Support Title",
      "default": "Support"
    },
    {
      "type": "link_list",
      "id": "support_links",
      "label": "Support Links"
    },
    {
      "type": "text",
      "id": "social_media_text",
      "label": "Social Media Text",
      "default": "Follow Us On Social Media"
    },
    {
      "type": "url",
