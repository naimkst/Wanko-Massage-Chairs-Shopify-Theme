<section class="faq-area section-padding">
  <div class="container">
    <div class="faq-wrap">
      <div class="faq-item">
        <div class="accordion" id="accordionExample">
          {% for block in section.blocks %}
            {% if block.type == 'title' %}
              <h2>{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.type == 'faq' %}
              <div class="accordion-item">
                <h3 class="accordion-header" id="heading{{forloop.index}}">
                  <button
                    class="accordion-button"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapse{{forloop.index}}"
                    aria-expanded="true"
                    aria-controls="collapse{{forloop.index}}"
                  >
                    {{ block.settings.question }}
                  </button>
                </h3>
                <div
                  id="collapse{{forloop.index}}"
                  class="accordion-collapse collapse"
                  aria-labelledby="heading{{forloop.index}}"
                  data-bs-parent="#accordionExample"
                >
                  <div class="accordion-body">
                    {{ block.settings.answer }}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [],
  "blocks": [
    {
      "name": "Item",
      "type": "faq",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What products do you offer?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>We offer a range of massage chairs and other massage devices designed to provide relaxation and wellness. Our products include full-body massage chairs, portable massagers, foot massagers, and more.</p>"
        }
      ]
    },
    {
      "name": "heading",
      "type": "title",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "General Questions"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "blocks": [
        {
          "type": "faq"
        },
        {
          "type": "title"
        }
      ]
    }
  ]
}
{% endschema %}
